<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offwhite">

    <!-- Gif da Logo centralizada na Tela toda -->
    <ImageView
        android:id="@+id/imagem_situt2"
        android:layout_width="500dp"
        android:layout_height="880dp"
        android:src="@drawable/situtw"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título centralizado do "Bem-Vindo ao SITUT -->
    <TextView
        android:id="@+id/titulo_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tela0"
        android:textSize="@dimen/text_title"
        android:textColor="@color/midnight_blue"
        android:textStyle="bold"
        android:fontFamily="@font/chonkypumpkin"
        android:shadowColor="@color/cyan"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Primeiro container de instrução -->
    <View
        android:id="@+id/txt1"
        android:layout_width="380dp"
        android:layout_height="135dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/container_title3"
        app:layout_constraintTop_toBottomOf="@id/titulo_final"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Primeiro texto de instrução -->
    <TextView
        android:id="@+id/text_instrucoes_1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/Tela0.1"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/offwhite"
        android:justificationMode="inter_word"
        android:fontFamily="@font/librebaskerville"
        app:layout_constraintTop_toTopOf="@id/txt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Segundo container de instrução -->
    <View
        android:id="@+id/txt2"
        android:layout_width="380dp"
        android:layout_height="105dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/container_title3"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Segundo texto de instrução -->
    <TextView
        android:id="@+id/text_instrucoes_2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/Tela0.2"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/offwhite"
        android:justificationMode="inter_word"
        android:fontFamily="@font/librebaskerville"
        app:layout_constraintTop_toTopOf="@id/txt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
