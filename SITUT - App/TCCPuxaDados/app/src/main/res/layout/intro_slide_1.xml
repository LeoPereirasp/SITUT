<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cobalt_blue">

    <!-- Título "Como Funciona a Instalação" -->
    <TextView
        android:id="@+id/titulo_instalacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tela1"
        android:textSize="@dimen/text_title"
        android:textColor="@color/offwhite"
        android:textStyle="bold"
        android:fontFamily="@font/chonkypumpkin"
        android:shadowColor="@color/midnight_blue"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt1"
        app:layout_constraintEnd_toEndOf="@id/txt2" />

    <!-- Imagem/Gif "planta" no final da Tela -->
    <ImageView
        android:id="@+id/imagem_plantairrigada"
        android:layout_width="450dp"
        android:layout_height="170dp"
        android:src="@drawable/planta"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Container do primeiro texto de instrução -->
    <View
        android:id="@+id/txt1"
        android:layout_width="380dp"
        android:layout_height="135dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/container_title"
        app:layout_constraintTop_toBottomOf="@id/titulo_instalacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Primeiro texto de instrução -->
    <TextView
        android:id="@+id/text_instrucoes_1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/Tela1.1"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/offwhite"
        android:justificationMode="inter_word"
        android:fontFamily="@font/librebaskerville"
        app:layout_constraintTop_toTopOf="@id/txt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Container do segundo texto de instrução -->
    <View
        android:id="@+id/txt2"
        android:layout_width="380dp"
        android:layout_height="135dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/container_title"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Segundo texto de instrução -->
    <TextView
        android:id="@+id/text_instrucoes_2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/Tela1.2"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/offwhite"
        android:justificationMode="inter_word"
        android:fontFamily="@font/librebaskerville"
        app:layout_constraintTop_toTopOf="@id/txt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Container do terceiro texto de instrução -->
    <View
        android:id="@+id/txt3"
        android:layout_width="380dp"
        android:layout_height="135dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/container_title"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Terceiro texto de instrução -->
    <TextView
        android:id="@+id/text_instrucoes_3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/Tela1.3"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/offwhite"
        android:justificationMode="inter_word"
        android:fontFamily="@font/librebaskerville"
        app:layout_constraintTop_toTopOf="@id/txt3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
