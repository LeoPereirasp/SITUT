<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/midnight_blue">

    <!-- ViewPager para deslizar entre diferentes páginas -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/dots_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Layout de pontos indicativos de páginas (dots) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dots_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Ponto 1 -->
        <ImageView
            android:id="@+id/dot1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="4dp"
            android:src="@drawable/branco"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Ponto 2 -->
        <ImageView
            android:id="@+id/dot2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="4dp"
            android:src="@drawable/branco"
            app:layout_constraintStart_toEndOf="@id/dot1"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Ponto 3 -->
        <ImageView
            android:id="@+id/dot3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="4dp"
            android:src="@drawable/branco"
            app:layout_constraintStart_toEndOf="@id/dot2"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Ponto 4 -->
        <ImageView
            android:id="@+id/dot4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="4dp"
            android:src="@drawable/branco"
            app:layout_constraintStart_toEndOf="@id/dot3"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Ponto 5 -->
        <ImageView
            android:id="@+id/dot5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="4dp"
            android:src="@drawable/branco"
            app:layout_constraintStart_toEndOf="@id/dot4"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Ponto 6 -->
        <ImageView
            android:id="@+id/dot6"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="4dp"
            android:src="@drawable/branco"
            app:layout_constraintStart_toEndOf="@id/dot5"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Ponto 7 -->
        <ImageView
            android:id="@+id/dot7"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="4dp"
            android:src="@drawable/branco"
            app:layout_constraintStart_toEndOf="@id/dot6"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

