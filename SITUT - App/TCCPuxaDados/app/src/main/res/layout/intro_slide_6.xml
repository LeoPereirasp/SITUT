<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/midnight_blue">

    <!-- Imagem/Gif "logodark" na tela toda -->
    <ImageView
        android:id="@+id/imagem_situt"
        android:layout_width="350dp"
        android:layout_height="880dp"
        android:src="@drawable/situtgif"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título "Tudo Pronto" -->
    <TextView
        android:id="@+id/titulo_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tela6"
        android:textSize="@dimen/text_title"
        android:textColor="@color/offwhite"
        android:textStyle="bold"
        android:fontFamily="@font/chonkypumpkin"
        android:shadowColor="@color/cobalt_blue"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Container do primeiro texto de instrução -->
    <View
        android:id="@+id/txt1"
        android:layout_width="380dp"
        android:layout_height="105dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/container_title2"
        app:layout_constraintTop_toBottomOf="@id/titulo_final"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Conteúdo do primeiro texto de instrução -->
    <TextView
        android:id="@+id/text_instrucoes_1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/Tela6.1"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/offwhite"
        android:justificationMode="inter_word"
        android:fontFamily="@font/librebaskerville"
        app:layout_constraintTop_toTopOf="@id/txt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Container do segundo texto de instrução -->
    <View
        android:id="@+id/txt2"
        android:layout_width="380dp"
        android:layout_height="135dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/offwhite"
        android:background="@drawable/container_title2"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Conteúdo do segundo texto de instrução -->
    <TextView
        android:id="@+id/text_instrucoes_2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/Tela6.2"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/offwhite"
        android:justificationMode="inter_word"
        android:fontFamily="@font/librebaskerville"
        app:layout_constraintTop_toTopOf="@id/txt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão de Avanço para criação do sistema -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_avancar"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
