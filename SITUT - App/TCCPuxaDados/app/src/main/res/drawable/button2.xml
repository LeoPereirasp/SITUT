<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Camada de fundo com gradiente e cantos arredondados -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="@color/cobalt_blue"
                android:endColor="@color/sky_blue"
                android:angle="90"/>
        </shape>
    </item>

    <!-- Camada da Imagem do BotÃ£o -->
    <item
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp">
        <bitmap
            android:src="@drawable/arrow"
            android:gravity="center" />
    </item>

</layer-list>
